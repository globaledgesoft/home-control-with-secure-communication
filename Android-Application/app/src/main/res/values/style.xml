<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="toolbarTextView" parent="textView">
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>

    <style name="listTitleTextView" parent="textView">
        <item name="android:textSize">@dimen/list_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/textBlack</item>
    </style>

    <style name="listItemTitleTextView" parent="textView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
        <item name="android:color">@color/textBlack</item>
    </style>

    <style name="listItemTextView" parent="textView">
        <item name="android:textSize">@dimen/list_item_size</item>
        <item name="android:color">@color/textLightGray</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
