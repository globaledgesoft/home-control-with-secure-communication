    android:layout_width="match_parent"
    android:background="@color/gunmetalGray"
    android:layout_height="match_parent"
    >


        <ImageView
            android:id="@+id/splashScreenImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
